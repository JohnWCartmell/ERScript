<?xml version="1.0" encoding="UTF-8"?>

<entity_model xmlns="http://www.entitymodelling.org/ERmodel">
	<defaults>
		<et_width>3.0</et_width>
	</defaults>

	<absolute>
		<composition>
			<type>element</type>
			<cardinality>
				<OneOrMore/>
			</cardinality>
			<inverse>..</inverse>
		</composition>
	</absolute>

	<entity_type>
		<name>element</name>
		<presentation>
			<x>2.4</x>
			<y>1.5</y>
		</presentation>
		<dependency>
			<name>..</name>
			<cardinality>
				<ExactlyOne/>
			</cardinality>
		</dependency>
		<value>
			<name>symbol</name>
			<type>
				<string/>
			</type>
			<identifying/>
		</value>
		<value>
			<name>name</name>
			<type>
				<string/>
			</type>
		</value>
		<value>
			<name>atomic number</name>
			<type>
				<integer/>
			</type>
		</value>
		<value>
			<name>relative atomic mass</name>
			<type>
				<float/>
			</type>
			<implementationOf/>
		</value>
		<composition>
			<type>isotope</type>
			<cardinality>
				<OneOrMore/>
			</cardinality>
			<inverse>..</inverse>
			<identifying/>
		</composition>
		<composition>
			<type>allotrope</type>
			<cardinality>
				<OneOrMore/>
			</cardinality>
			<inverse>..</inverse>
			<diagram>
				<path>
					<align>
						<ToSrc/>
					</align>
				</path>
			</diagram>
		</composition>
		<composition>
			<type>valency</type>
			<cardinality>
				<OneOrMore/>
			</cardinality>
			<identifying/>
			<inverse>..</inverse>
		</composition>
	</entity_type>

	<group>
		<presentation>
			<below>element</below>
			<y>0.5</y>
		</presentation>
		<entity_type>
			<name>isotope</name>
			<presentation>
				<!--<w>2.1</w>-->
			</presentation>
			<dependency>
				<name>..</name>
				<type>element</type>
				<cardinality>
					<ExactlyOne/>
				</cardinality>
			</dependency>
			<value>
				<name>numberOfNeutrons</name>
				<type>
					<integer/>
				</type>
				<identifying/>
			</value>
			<value>
				<name>relative isotopic mass</name>
				<type>
					<float/>
				</type>
			</value>
			<value>
				<name>abundancy ratio</name>
				<type>
					<float/>
				</type>
			</value>
		</entity_type>

		<entity_type>
			<name>allotrope</name>
			<presentation>
				<rightOf>isotope</rightOf>
				<w>2.1</w>
			</presentation>
			<dependency>
				<name>..</name>
				<type>element</type>
				<cardinality>
					<ExactlyOne/>
				</cardinality>
			</dependency>
			<value>
				<name>name</name>
				<type>
					<string/>
				</type>
				<identifying/>
			</value>
			<value>
				<name>melting point</name>
				<type>
					<float/>
				</type>
				<optional/>
			</value>
			<value>
				<name>boiling point</name>
				<type>
					<float/>
				</type>
				<optional/>
			</value>
			<value>
				<name>density</name>
				<type>
					<float/>
				</type>
				<optional/>
			</value>
		</entity_type>
		<entity_type>
			<name>valency</name>
			<presentation>
				<rightOf>allotrope</rightOf>
				<w>1.5</w> 
			</presentation>
			<dependency>
				<name>..</name>
				<type>element</type>
				<cardinality>
					<ExactlyOne/>
				</cardinality>
			</dependency>
			<value>
				<name>number</name>
				<type>
					<integer/>
				</type>
				<identifying/>
			</value>
		</entity_type>
	</group>


</entity_model>
