<?xml version="1.0" encoding="UTF-8"?>
<entity_model xmlns="http://www.entitymodelling.org/ERmodel" 
              ERScriptVersion="1.6"
              metaDataFilePathWrtERHome="MetaModel/xml/ERA.surface..physical.xml">
   <description>
      A further test of the code generators and a demonstator of pullbacks. Should move to separate folder and 
      as an example of elaboration.
   </description>
   <absolute>
      <composition type="grid*"/>
      <composition type="cardinal*"/>
   </absolute>
   <entity_type name="grid">
      <identifying>
         <attribute name="name" type="string"/>
      </identifying>
      <composition name="rows" type="row*">
         <pullback>
            <projection_rel>index</projection_rel>
            <along>
               noOfRows
            </along>
         </pullback>
      </composition>
      <composition name="columns" type="column*">
         <pullback>
            <projection_rel>index</projection_rel>
            <along>
               noOfCols
            </along>
         </pullback>
      </composition>
      <reference name="noOfRows" type="cardinal"/>
      <reference name="noOfCols" type="cardinal"/>
   </entity_type>
   <group name="row and column">
      <entity_type name="row">
         <identifying>
            <context type="grid"/>
            <reference name="index" type="ordinal">
               <diagonal path="../noOfRows"/>
               <riser path=".."/>
            </reference>
         </identifying>
         <composition name="cells" type="cell*">
            <pullback>
               <along>
                  ..
               </along>
               <projection_rel>col</projection_rel>
            </pullback>
         </composition>
      </entity_type>
      <entity_type name="column">
         <identifying>
            <context type="grid"/>
            <reference name="index" type="ordinal">
               <diagonal path="../noOfCols"/>
               <riser path=".."/>
            </reference>
         </identifying>
         <reference name="cells" type="cell*">
            <inverse>col</inverse>
         </reference>
      </entity_type>
   </group>
   <entity_type name="cell">
      <identifying>
         <context type="row"/>
         <reference name="col" type="column">
            <inverse>cells</inverse>
            <diagonal path="../.."/>
            <riser path=".."/>
         </reference>
      </identifying>
   </entity_type>
   <group name="reuseable">
      <entity_type name="cardinal">
         <identifying>
            <attribute name="zno" type="nonNegativeInteger"/>
         </identifying>
         <composition type="ordinal*"/>
      </entity_type>
      <entity_type name="ordinal">
         <identifying>
            <context type="cardinal"/>
            <attribute name="zno" type="nonNegativeInteger"/>
         </identifying>
      </entity_type>
   </group>
</entity_model>
