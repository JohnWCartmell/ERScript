<diagram xmlns="http://www.entitymodelling.org/diagram" 
         xmlns:diagram="http://www.entitymodelling.org/diagram"
         xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
	<include><filename>shared/text_style_definitions.xml</filename></include>
	<include><filename>shared/shape_style_definitions.xml</filename></include>

	<default>
		<hmin>1.0</hmin>
		<wmin>1.0</wmin>
		<margin>0.3</margin>
		<padding>0.1</padding>
		<packing>horizontal</packing>
		<text_style>normal</text_style>
		<shape_style>outline</shape_style>
		<debug-whitespace>true</debug-whitespace>
	</default>
	<h>10</h>
	<margin>1</margin>
    <label>
        <text>xreqd.mixed.xml </text>
        <text_style>title</text_style>
   </label> 

	<label><text>C0 has no x position specified -- defaults to local 0</text></label>
	<label><text>C1 has x specified to place it at the centre of B1 -- by default this  places the centre of C1 at the centre of B1</text></label>
	<label><text>C2 has x specified to place it to the right of C1  -- by default this places the left of C2 to the right of C1</text></label>

	<enclosure>
		<id>A</id>
		<label/>
		<x><local>0</local></x>
		<enclosure>
			<id>B</id>
			<label/>
			<enclosure>
				<id>B1</id>
				<x><local>3</local></x>
				<h>1</h>
				<w>2.3</w>
				<label/>
			</enclosure>
			<enclosure>
				<id>B2</id>
				<x><at><right/><of>B1</of></at></x>
				<y><at><top/><of>B1</of></at></y>
				<h>1</h>
				<label/>
			</enclosure>
		</enclosure>
		<enclosure>
			<id>C</id>
			<x><at><left/><parent/></at></x>
			<label/>
			<enclosure>
				<id>C0</id>
				<h>1</h>
				<label/>
			</enclosure>
			<enclosure>
				<id>C1</id>
				<x><at><centre/><of>B1</of></at></x>
				<y><at><top/><of>C0</of></at></y>
				<h>1</h>
				<label/>
			</enclosure>
			<enclosure>
				<id>C2</id>
				<x><at><right/><of>C1</of></at></x>
				<y><at><top/><of>C1</of></at></y>
				<h>1</h>
				<label/>
			</enclosure>
		</enclosure>
	</enclosure>
</diagram>
