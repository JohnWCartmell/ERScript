<diagram xmlns="http://www.entitymodelling.org/diagram" 
         xmlns:diagram="http://www.entitymodelling.org/diagram"
         xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
   <include><filename>shared/text_style_definitions.xml</filename></include>
   <include><filename>shared/shape_style_definitions.xml</filename></include>

   <default>
      <hmin>1.0</hmin>
      <wmin>1.0</wmin>
      <margin>0.3</margin>
      <padding>0.3</padding>
      <packing>horizontal</packing>
      <text_style>normal</text_style>
      <shape_style>outline</shape_style>
      <debug-whitespace>true</debug-whitespace>
   </default>

   <h>10.0</h>

	
    <label>
        <text>xalignment.to_cousin.xml</text>
        <x><abs>4.5</abs></x>
        <y><abs>0.5</abs></y>
        <text_style>title</text_style>
   </label> 

   <label>
        <text>In this example 'B1' x value is centred to its cousin 'A1'.</text>
        <x><abs>1.5</abs></x>
        <y><abs>1.4</abs></y>
        <text_style>italic</text_style>
   </label> 

   <enclosure>
        <id>outer</id>
        <x><abs>1.755</abs></x>
        <y><abs>2.0</abs></y>
        <h>8.0</h>
        <label>
              <text>outer</text>
              <x><at><centre/></at></x>
              <y><local>0.3</local></y>
        </label>  
   <enclosure>
       <id>A</id>
       <x><local>0.3</local></x>
       <y><local>0.75</local></y>
       <h>2.5</h>
       <label>
              <text>A</text>
              <y><local>0.5</local></y>
        </label>
 
       <enclosure>
           <id>A1</id>
            <x><local>3.5</local></x>
            <y><local>0.5</local></y>
            <h>1</h>
            <label>
              <text>A1</text>
              <x><at><centre/></at></x>
              <y><local>0.5</local></y>
            </label>
       </enclosure>
   </enclosure>
   <enclosure>
       <id>B</id>
       <x><local>1.5</local></x>
       <y><local>5.0</local></y>
       <h>2.5</h>
       <label>
              <text>B</text>
              <x><at><centre/></at></x>
              <y><local>0.5</local></y>
        </label>
       <enclosure>
            <id>B1</id>
            <x><place><centre/></place><at><centre/><of>A1</of></at></x>
            <y><local>0.5</local></y>
            <h>1</h>
            <label>
              <text>B1</text>
              <x><at><centre/></at></x>
              <y><local>0.5</local></y>
            </label>
       </enclosure>
   </enclosure>
 </enclosure>
</diagram>
