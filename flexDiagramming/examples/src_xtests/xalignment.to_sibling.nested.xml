<diagram xmlns="http://www.entitymodelling.org/diagram" 
         xmlns:diagram="http://www.entitymodelling.org/diagram"
         xmlns:xs="http://www.w3.org/2001/XMLSchema"
>

   <include><filename>shared/text_style_definitions.xml</filename></include>
  <include><filename>shared/shape_style_definitions.xml</filename></include>


   <default>
      <hmin>1.0</hmin>
      <wmin>2.0</wmin>
      <margin>0.2</margin>
      <padding>0.1</padding>
      <packing>horizontal</packing>
      <text_style>normal</text_style>
      <shape_style>outline</shape_style>
      <debug-whitespace>true</debug-whitespace>
   </default>
   
   <h>10</h>
	<margin>0.5</margin>
	<label><text>xalignment.to_sibling.nested.xml</text></label>
	<label><text>A2 centred beneath A1</text></label>
   <enclosure>
       <id>A</id>
       <x><abs>0.1</abs></x>
       <y><abs>2</abs></y>
       <h>2.3</h>
       <enclosure>
            <id>A1</id>
			<label/>
            <x><relative><offset>0.4</offset></relative></x>
            <y><abs>2.1</abs></y>
			<w>2.0</w>
            <h>1</h>
       </enclosure>
       <enclosure>
            <id>A2</id>
			<label/>
            <x><place><centre/></place><at><centre/><of>A1</of></at></x>
            <y><abs>3.2</abs></y>
			<w>1.0</w>
            <h>1</h>
       </enclosure>
   </enclosure>
</diagram>
