<diagram xmlns="http://www.entitymodelling.org/diagram" 
         xmlns:diagram="http://www.entitymodelling.org/diagram"
         xmlns:xs="http://www.w3.org/2001/XMLSchema" >

  <include><filename>shared/text_style_definitions.xml</filename></include>
  <include><filename>shared/shape_style_definitions.xml</filename></include>

   <default>
      <hmin>1.0</hmin>
      <wmin>1.0</wmin>
      <margin>0.2</margin>
      <padding>0</padding>
      <packing>horizontal</packing>
      <text_style>normal</text_style>
      <shape_style>outline</shape_style>
      <debug-whitespace>true</debug-whitespace>
   </default>
  <h>10</h>
	<margin>0.5</margin>
	<label><text>xalignment.to_rhs_of_cousin.xml</text></label>
	<label><text>left edge of B is aligned to right edge of cousin A</text></label>
  <enclosure>
    <id>AA</id>
    <x><abs>1.0</abs></x>
    <y><abs>2</abs></y>
    <h>1.2</h>
    <enclosure>
      <id>A</id>
	  <label/>
      <x><relative><offset>0.5</offset></relative></x>
      <y><abs>2.1</abs></y>
      <h>1</h>
    </enclosure>
  </enclosure>
  <enclosure>
    <id>BB</id>
    <x><abs>1.0</abs></x>
    <y><abs>3.4</abs></y>
    <h>1.2</h>
    <enclosure>
      <id>B</id>
	  <label/>
      <x><place><left/><edge/></place>
        <at>
          <right/><edge/><of>A</of>
        </at>
      </x>
      <y><abs>3.5</abs></y>
      <h>1</h>
    </enclosure>
  </enclosure>
</diagram>
