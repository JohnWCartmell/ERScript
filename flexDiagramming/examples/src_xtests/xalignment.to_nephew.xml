<diagram xmlns="http://www.entitymodelling.org/diagram" 
         xmlns:diagram="http://www.entitymodelling.org/diagram"
         xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
 
   <include><filename>shared/text_style_definitions.xml</filename></include>
  <include><filename>shared/shape_style_definitions.xml</filename></include>

   <default>
      <hmin>1.0</hmin>
      <wmin>1.0</wmin>
      <margin>0.1</margin>
      <padding>0.1</padding>
      <packing>horizontal</packing>
      <text_style>normal</text_style>
      <shape_style>outline</shape_style>
      <debug-whitespace>true</debug-whitespace>
   </default>
   <h>10</h>
	<margin>0.5</margin>
	<label><text>xalignment.to_nephew.xml</text></label>
	<label><text>B is centred to its nephew A</text></label>
   <enclosure>
       <id>AA</id>
       <x><abs>0.1</abs></x>
       <y><abs>2</abs></y>
	   <w>3.0</w>
       <h>1.2</h>
       <enclosure>
            <id>A</id>
			<label/>
            <x><relative><offset>1.0</offset></relative></x>
            <y><abs>2.1</abs></y>
            <h>1</h>
       </enclosure>
   </enclosure>
   <enclosure>
       <id>B</id>
       <x><place><centre/></place><at><centre/><of>A</of></at></x>
       <y><abs>3.3</abs></y>
	   <label/>
	   <w>2</w>
       <h>1</h>
   </enclosure>
</diagram>
