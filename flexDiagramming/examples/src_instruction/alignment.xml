<?xml version="1.1"?>
<diagram xmlns="http://www.entitymodelling.org/diagram" >
  <include>
    <filename>shared/text_style_definitions.xml</filename>
  </include>
  <include>
    <filename>shared/shape_style_definitions.xml</filename>
  </include>
  <default>
    <hmin>1.0</hmin>
    <wmin>1.0</wmin>
    <margin>0.2</margin>
    <padding>0.15</padding>
    <packing>horizontal</packing>
    <text_style>normal</text_style>
    <shape_style>outline</shape_style>
    <debug-whitespace>false</debug-whitespace>
  </default>

  <enclosure>
     <x><local>0</local></x>
	   <y><abs>2.0</abs></y>
	  <shape_style>gradient</shape_style>
	  <debug-whitespace>false</debug-whitespace>
	  <margin>1.0</margin>
	  <label>
		<text>We can specify either x or y to be the same as that of the predecessor.</text>
	  </label>
	  <label>
		<text>Here A2 and A3  have x unspecified and y position specified by:</text>
	  </label>
	  <label>
		<text><![CDATA[
		  <y><at><predecessor></at></y>
		]]></text>
	  </label>


	  <label>
	  	<y><delta>1.0</delta><at><predecessor/></at></y>
	     <text>whereas here B2 and B3 have x position  specified by:</text>
      </label>
	  <label>
		<text><![CDATA[<x><at><predecessor/></at></x>]]></text>
      </label>
	  <label>
	     <text> and y position  unspecified.</text>
      </label>


	  <enclosure>
				<id>A</id>
				<x><local>11</local></x>
				<y><local>1.0</local></y>
				<label/>
				<enclosure>
				  <id>A1</id>
				  <label/>
				  <ht>0.4</ht>
				  <x><local>1.0</local></x>
				  <y><local>0.5</local></y>
				</enclosure>
				<enclosure>
				  <id>A2</id>
				  <y><at><predecessor/></at></y>
				  <label/>
				  <ht>0.2</ht>
				</enclosure>
				<enclosure>
				  <id>A3</id>
				  <ht>0.3</ht>
				  <y><at><predecessor/></at></y>
				  <label/>
				</enclosure>
	  </enclosure>

	  <enclosure>
				<id>B</id>
				<x><at><predecessor/></at></x>
				<label/>
				<enclosure>
				  <id>B1</id>
				  <label/>
				  <wl>0.4</wl>
				  <x><local>1.0</local></x>
				  <y><local>0.5</local></y>
				</enclosure>
				<enclosure>
				  <id>B2</id>
				  <x><at><predecessor/></at></x>
				  <label/>
				  <wl>0.3</wl>
				</enclosure>
				<enclosure>
				  <id>B3</id>
				  <x><at><predecessor/></at></x>
				  <label/>
				  <wl>0.2</wl>
				</enclosure>
		  </enclosure>
  </enclosure>
  




</diagram>