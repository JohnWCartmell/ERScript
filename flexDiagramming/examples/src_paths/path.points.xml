<diagram xmlns="http://www.entitymodelling.org/diagram" 
         xmlns:diagram="http://www.entitymodelling.org/diagram"
         xmlns:xs="http://www.w3.org/2001/XMLSchema"
>

    <include>
        <filename>../../methods/test/xml/testFlexStyleDefinitions.xml</filename>
    </include>

   <default>
      <hmin>1.0</hmin>
      <wmin>1.0</wmin>
      <margin>0</margin>
      <padding>0</padding>
      <packing>horizontal</packing>
      <text_style>normal</text_style>
      <shape_style>outline</shape_style>
      <debug-whitespace>true</debug-whitespace>
   </default>
   <h>10</h>

   <label>
      <x><local>6</local></x>
      <y><local>3</local></y>
      <text>Points and Paths</text>
      <text_style>title</text_style>
   </label>
   
   <enclosure>
      <x><at><predecessor/></at></x>
      <w>20</w>
      <hb>0.2</hb>
      <shape_style>gradient</shape_style>
      <debug-whitespace>false</debug-whitespace>
      <margin>1.0</margin>
      <padding>0</padding>
      <label>
         <x><local>0.5</local></x>
         <y><local>0.5</local></y>
         <text>This is an elemntary example in which paths are coded explicitly as sequences of points using local adressing.</text>
      </label>
      <enclosure>
         <x><at><predecessor/></at></x>
         <y><local>1.0</local></y>         
         <shape_style>gradient</shape_style>
         <h>3.0</h>
         <w>6.0</w>  <!-- had to specify these since calculated width seems not to include points and paths -->
         <path>
            <point>
               <x><local>1.5</local></x>
               <y><local>0.5</local></y>
            </point>
            <point>
               <x><local>1.5</local></x>
               <y><local>2.5</local></y>
            </point>
            <point>
               <x><local>2.5</local></x>
               <y><local>2.5</local></y>
            </point>
            <point>
               <x><local>2.5</local></x>
               <y><local>0.5</local></y>
            </point>
            <point>
               <x><local>1.5</local></x>
               <y><local>0.5</local></y>
            </point>
         </path>
         <!-- K -->
         <path>
            <point>
               <x><local>3.5</local></x>
               <y><local>0.5</local></y>
            </point>
            <point>
               <x><local>3.5</local></x>
               <y><local>2.5</local></y>
            </point>
         </path>
         <path>
            <point>
               <x><local>4.5</local></x>
               <y><local>0.5</local></y>
            </point>
            <point>
               <x><local>3.5</local></x>
               <y><local>1.5</local></y>
            </point>
            <point>
               <x><local>4.5</local></x>
               <y><local>2.5</local></y>
            </point>
         </path>
      </enclosure>
   </enclosure>
</diagram>
