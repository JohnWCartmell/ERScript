<diagram 
    xmlns:diagram="http://www.entitymodelling.org/diagram" 
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns="http://www.entitymodelling.org/diagram">
	<include>
		<filename>../src_xtests/shared/text_style_definitions.xml</filename>
	</include>
	<include>
		<filename>../src_xtests/shared/shape_style_definitions.xml</filename>
	</include>
	<include>
		<filename>../src_xtests/shared/endline_style_definitions.xml</filename>
	</include>
	<default>
		<hmin>1.0</hmin>
		<wmin>1.0</wmin>
		<margin>0.2</margin>
		<padding>0.15</padding>
		<packing>horizontal</packing>
		<text_style>normal</text_style>
		<shape_style>outline</shape_style>
		<line_style>testline</line_style>
		<end_marker>testline</end_marker>
		<debug-whitespace>false</debug-whitespace>
	</default>
	<enclosure>
		<y><abs>2.0</abs></y>
		<shape_style>gradient</shape_style>
		<debug-whitespace>false</debug-whitespace>
		<margin>0.5</margin>
		<label>
			<text> Route specified from A to B using a topdown directive as follows:</text>
		</label>
		<label><text><![CDATA[<route>]]></text></label>
	    <label><x><delta>0.5</delta><at><predecessor/></at></x><text><![CDATA[<top_down/>]]></text></label>
		<label><text><![CDATA[<source><id>A</id><annotation>down_to_c</annotation></source>]]></text></label>
		<label><text><![CDATA[<destination><id>C</id><annotation>back_to_a</annotation></destination>]]></text></label>
		<label><x><delta>-0.5</delta><at><predecessor/></at></x><text><![CDATA[</route>]]></text></label>
		<label>
			<text>defaults to ns, ramp, ns </text>
		</label>
		<label>
			<text>ns cardinals by default attach midway and long enough for annotations</text>
		</label>
		<enclosure>
			<id>A</id>
			<x><local>12</local></x>
			<y><local>0.5</local></y>
			<label/>
		</enclosure>
		<enclosure>
			<id>B</id>
			<label/>
			<x><at><centre/><of>A</of></at><delta>1.0</delta></x>
			<y><at><bottom/><of>A</of></at><delta>1.0</delta></y>
		</enclosure>
		<route>
		    <top_down/>
			<source>
					<id>A</id>
					<annotation>down_to_B</annotation>
			</source>
			<destination>
					<id>B</id>
					<annotation>back_to_a</annotation>
			</destination>
		</route>
	</enclosure>
	<enclosure>
		<x><at><predecessor/></at></x>
		<shape_style>gradient</shape_style>
		<debug-whitespace>false</debug-whitespace>
		<margin>0.5</margin>
		<label>
			<text> Similarly route specified from C to D following orthogonals ns,ew,ns </text>
		</label>
		<label>
			<text> by specifying within the route node the path and shaping it as follows </text>
		</label>
		<label><text><![CDATA[<route>]]></text></label>
	    <label><x><delta>0.5</delta><at><predecessor/></at></x><text><![CDATA[...as before with A to B]]></text></label>
	    <label><text><![CDATA[<path><ew/></path>]]></text></label>
		<label><x><delta>-0.5</delta><at><predecessor/></at></x><text><![CDATA[</route>]]></text></label>
		<label>
			<text>TBD allow control over y value of the ew</text>
		</label>
		<enclosure>
			<id>C</id>
			<x><local>12</local></x>
			<y><local>0.5</local></y>
			<label/>
		</enclosure>
		<enclosure>
			<id>D</id>
			<label/>
			<x><at><centre/><of>C</of></at><delta>1.0</delta></x>
			<y><at><bottom/><of>C</of></at><delta>1.0</delta></y>
		</enclosure>
		<route>
		    <top_down/>
			<source>
					<id>C</id>
					<annotation>down_to_c</annotation>
			</source>
			<destination>
					<id>D</id>
					<annotation>back_to_a</annotation>
			</destination>
			<path><ew/></path>
		</route>
	</enclosure>

	<enclosure>
		<x><at><predecessor/></at></x>
		<shape_style>gradient</shape_style>
		<debug-whitespace>false</debug-whitespace>
		<margin>1.0</margin>
		<label><text>Here there is a topdown route where source and destination are identical.</text></label>
		<label><text>***TBD*** Observe that the sweep out ew don't take the ns out far enough.</text></label>
		<enclosure>
			<id>E</id>
			<x><local>12</local></x>
			<y><local>1.2</local></y>
			<h>0.75</h>
			<w>2.1</w>
			<label/>
		</enclosure>
		<route>
		    <top_down/>
			<source>
					<id>E</id>
					<annotation>down_to_itself</annotation>
			</source>
			<destination>
					<id>E</id>
					<annotation>back_up_to_itself</annotation>
			</destination>
		</route>
	</enclosure>
	<enclosure>
		<x><at><predecessor/></at></x>
		<shape_style>gradient</shape_style>
		<debug-whitespace>false</debug-whitespace>
		<margin>1.0</margin>
		<label><text>Here multiple topdown routes to show how points of connection on shared edge arranged.</text></label>
		<label>
	        <y><delta>1.0</delta><at><bottom/><predecessor/></at></y>
	        <text>Note Positive: (i) downgoing topdown correctly ordered.</text>
	    </label>
		<label><text>Note Negatives: (TBD). </text></label>
		<label><text>(ii) outgoing upwards destined topdown in wrong place.</text></label>
		<label><text>(iii) G width doesn't extend to labels. </text></label>
		<label><text>(iv) G width doesn't extend to labels of children.</text></label>
		<label><text>(v) labels on routes down from F overlap.</text></label>
		<enclosure>
			<id>F</id>
			<x><local>10</local></x>
			<y><local>2</local></y>
			<w>4</w>
			<label/>
		</enclosure>
		<enclosure>
	        <id>G</id>
	        <x><place><centre/></place><at><centre/><predecessor/></at></x>
	        <y><delta>1.0</delta><at><bottom/><predecessor/></at></y>
	        <label/>
	        <enclosure>
	          <id>G1</id>
	          <label/>
	          <ht>0.4</ht>
	          <hb>0.2</hb>
	          <x><local>1.0</local></x>
	          <y><local>1.0</local></y>
	        </enclosure>
	        <enclosure>
	          <id>G2</id>
	          <y><at><predecessor/></at></y>
	          <label/>
	          <ht>0.2</ht>
	          <hb>0.1</hb>
	        </enclosure>
	        <enclosure>
	          <id>G3</id>
	          <ht>0.3</ht>
	          <hb>0.2</hb>
	          <y><at><predecessor/></at></y>
	          <label/>
	        </enclosure>
    	</enclosure>
    	<route>
		    <top_down/>
			<source>
				<id>F</id>
				<annotation>down to F itself</annotation>
			</source>
			<destination>
				<id>F</id>
				<annotation>up to F itself</annotation>
			</destination>
		</route>
		<route>
		    <top_down/>
			<source>
				<id>F</id>
				<annotation>down_to_G3</annotation>
				<linestyle>testline</linestyle>
			</source>
			<destination>
				<id>G3</id>
				<annotation>up_to_F</annotation>
				<linestyle>testline</linestyle>
			</destination>
		</route>		
		<route>
		    <top_down/>
			<source>
				<id>F</id>
				<annotation>down_to_G1</annotation>
			</source>
			<destination>
				<id>G1</id>
				<annotation>up_to_F</annotation>
			</destination>
		</route>		
		<route>
		    <top_down/>
			<source>
				<id>F</id>
				<annotation>down_to_G3</annotation>
			</source>
			<destination>
				<id>G2</id>
				<annotation>up_to_F</annotation>
			</destination>
		</route>
	</enclosure>
</diagram>