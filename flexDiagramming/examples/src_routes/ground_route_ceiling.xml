<diagram 
    xmlns:diagram="http://www.entitymodelling.org/diagram" 
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns="http://www.entitymodelling.org/diagram">
	<include>
		<filename>../src_xtests/shared/text_style_definitions.xml</filename>
	</include>
	<include>
		<filename>../src_xtests/shared/shape_style_definitions.xml</filename>
	</include>
	<include>
		<filename>../src_xtests/shared/endline_style_definitions.xml</filename>
	</include>
	<default>
		<hmin>1.0</hmin>
		<wmin>1.0</wmin>
		<margin>0.2</margin>
		<padding>0.15</padding>
		<packing>horizontal</packing>
		<text_style>normal</text_style>
		<shape_style>outline</shape_style>
		<debug-whitespace>false</debug-whitespace>
		<end_style>testline</end_style>
	</default>
	<enclosure>
		<y><abs>2.0</abs></y>
		<shape_style>gradient</shape_style>
		<debug-whitespace>false</debug-whitespace>
		<margin>0.5</margin>
		<label>
			<text> Route specified from A to B by</text>
		</label>
		<label><text><![CDATA[<route>]]></text></label>
	    <label><x><delta>0.5</delta><at><predecessor/></at></x><text><![CDATA[<top_down/>]]></text></label>
		<label><text><![CDATA[<source><id>A</id><annotation>down_to_c</annotation></source>]]></text></label>
		<label><text><![CDATA[<destination><id>C</id><annotation>back_to_a</annotation></destination>]]></text></label>
		<label><x><delta>-0.5</delta><at><predecessor/></at></x><text><![CDATA[</route>]]></text></label>
		<label>
			<text>defaults to ns, ramp, ns </text>
		</label>
		<label>
			<text>ns cardinals by default attach midway and long enough for annotations</text>
		</label>
		<enclosure>
			<id>A</id>
			<x><local>12</local></x>
			<y><local>0.5</local></y>
			<label/>
		</enclosure>
		<enclosure>
			<id>B</id>
			<label/>
			<x><at><centre/><of>A</of></at><delta>1.0</delta></x>
			<y><at><bottom/><of>A</of></at><delta>1.0</delta></y>
		</enclosure>
		<route>
		    <top_down/>
			<source>
					<id>A</id>
					<annotation>down_to_B</annotation>
			</source>
			<destination>
					<id>B</id>
					<annotation>back_to_a</annotation>
			</destination>
		</route>
	</enclosure>
	<enclosure>
		<x><at><predecessor/></at></x>
		<shape_style>gradient</shape_style>
		<debug-whitespace>false</debug-whitespace>
		<margin>0.5</margin>
		<label>
			<text> Similarly route specified from C to D following orthogonals ns,ew,ns </text>
		</label>
		<label>
			<text> by specifying within the route node the path and shaping it as follows </text>
		</label>
		<label><text><![CDATA[<route>]]></text></label>
	    <label><x><delta>0.5</delta><at><predecessor/></at></x><text><![CDATA[...as before with A to B]]></text></label>
	    <label><text><![CDATA[<path><ew/></path>]]></text></label>
		<label><x><delta>-0.5</delta><at><predecessor/></at></x><text><![CDATA[</route>]]></text></label>
		<label>
			<text>TBD allow control over y value of the ew</text>
		</label>
		<enclosure>
			<id>C</id>
			<x><local>12</local></x>
			<y><local>0.5</local></y>
			<label/>
		</enclosure>
		<enclosure>
			<id>D</id>
			<label/>
			<x><at><centre/><of>C</of></at><delta>1.0</delta></x>
			<y><at><bottom/><of>C</of></at><delta>1.0</delta></y>
		</enclosure>
		<route>
		    <top_down/>
			<source>
					<id>C</id>
					<annotation>down_to_c</annotation>
			</source>
			<destination>
					<id>D</id>
					<annotation>back_to_a</annotation>
			</destination>
			<path><ew/></path>
		</route>
	</enclosure>
</diagram>